<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="wrap_content">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical" android:layout_width="match_parent"
            android:layout_height="wrap_content">


        <GridLayout
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:columnCount="2"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/rv_name_emp"
                android:text="312312"
                android:textColor="#000"
                android:textSize="20dp"
                android:layout_columnWeight="1"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/rv_lastname_emp"
                android:text="312312"
                android:textColor="#000"
                android:layout_columnWeight="1"
                android:textSize="20dp"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/rv_middlename_emp"
                android:text="312312"
                android:textColor="#000"
                android:layout_columnWeight="1"
                android:textSize="20dp"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/rv_birthday_emp"
                android:text="312312"
                android:textColor="#000"
                android:layout_columnWeight="1"
                android:textSize="20dp"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/rv_position_emp"
                android:text="312312"
                android:textColor="#000"
                android:layout_columnWeight="1"
                android:textSize="20dp"
                android:layout_height="wrap_content" />

        </GridLayout>

            <GridLayout
                android:layout_marginHorizontal="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:columnCount="2"
                android:layout_height="match_parent">
        <TextView
            android:layout_marginTop="10dp"
            android:text="Количество детей:"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:id="@+id/rv_childrens_name"
            android:textSize="20dp"
            android:layout_height="wrap_content" />


            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/rv_childrens"
                android:text=" 0"
                android:textColor="#000"
                android:layout_width="wrap_content"
                android:textSize="20dp"
                android:layout_height="wrap_content" />
            </GridLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>